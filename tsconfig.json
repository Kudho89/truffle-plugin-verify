{
  "compilerOptions": {
    "target": "es2015",
    "declaration": true,
    "lib": ["es2020", "dom"],
    "types": ["node"],
    "sourceMap": false,
    "strict": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "module": "commonjs"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
